{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],    
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules/**/*.ts"
  ]
}
